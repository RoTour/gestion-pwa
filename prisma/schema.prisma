// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum EnumResource {
  WOOD
  MARBLE
  WINE
  SULFUR
  CRYSTAL
}

enum EnumTransactionType {
  BUY
  SELL
}

model Player {
  id          String @id @default(uuid())
  email       String @unique
  name        String
  maxCitizens Int    @default(50)

  Resources  Resources?
  Workforces Workforce[]
  Transactions Transaction[]
}

model Resources {
  id String @id @default(uuid())

  gold    BigInt @default(0)
  wood    BigInt @default(0)
  marble  BigInt @default(0)
  wine    BigInt @default(0)
  sulfur  BigInt @default(0)
  crystal BigInt @default(0)

  updatedAt DateTime @default(now()) @updatedAt

  player   Player @relation(fields: [playerId], references: [id])
  playerId String @unique
}

model Workforce {
  amount Int @default(0)

  resource EnumResource @default(WOOD)

  player   Player @relation(fields: [playerId], references: [id])
  playerId String

  @@id([playerId, resource])
}

model ResourcePrice {
  resource EnumResource @unique @default(WOOD)
  price    Int          @default(50)

  updatedAt DateTime @default(now()) @updatedAt
}

model Transaction {
  id String @id @default(uuid())
  resource EnumResource
  amount   Int
  price    Int
  type     EnumTransactionType
  date     DateTime @default(now())
  
  // Relations
  player   Player @relation(fields: [playerId], references: [id])
  playerId String
}