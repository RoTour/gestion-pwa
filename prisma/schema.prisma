// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum EnumResource {
  WOOD
  MARBLE
  WINE
  SULFUR
  CRYSTAL
}

model Player {
  id          String @id @default(uuid())
  email       String @unique
  name        String
  maxCitizens Int    @default(50)

  Resources Resources?
  Citizens  Citizen[]
}

model Resources {
  gold    Int @default(0)
  wood    Int @default(0)
  marble  Int @default(0)
  wine    Int @default(0)
  sulfur  Int @default(0)
  crystal Int @default(0)

  updatedAt DateTime @default(now()) @updatedAt

  player   Player @relation(fields: [playerId], references: [id])
  playerId String @unique
}

model Citizen {
  amount Int @default(0)

  resource EnumResource @default(WOOD)

  player   Player @relation(fields: [playerId], references: [id])
  playerId String

  @@id([playerId, resource])
}

model ResourcePrice {
  resource EnumResource @unique @default(WOOD)
  amount   Int          @default(50)

  updatedAt DateTime @default(now()) @updatedAt
}
